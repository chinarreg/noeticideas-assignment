!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title
      = content_for?(:title) ? yield(:title) : "Noeticideass Admin Panel"
    %meta{:content => "#{content_for?(:description) ? yield(:description) : " Noeticideass Admin Panel "}", :name => "description"}/
    = stylesheet_link_tag 'application', media: 'all'
    = csrf_meta_tags
  %body
    .container
      .row
        .col-md-4.col-md-offset-4{:style => "text-align:center;"}
          %h1 Noeticideass Admin Panel
      .row
        .col-md-4.col-md-offset-4
          .login-panel.panel.panel-default
            .panel-heading
              %h3.panel-title Please Sign In
            .panel-body
              = yield
  = javascript_include_tag 'application'
